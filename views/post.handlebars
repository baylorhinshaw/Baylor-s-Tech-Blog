<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#each post.comments as |comment|}}
  <p>
    {{comment.user.name}} {{comment.description}} {{comment.date_created}}
  </p>
  {{/each}}
</div>
{{!-- need to make this for comments --}}
<div class="text-center">
   <form class="form comment-form">
      <div class="form-group">
        <label for="post-comment"></label>
        <input class="form-input" type="text" id="post-comment" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">leave a comment</button>
      </div>
    </form>
</div>
